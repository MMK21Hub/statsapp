  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run main script",
      "runtimeExecutable": "yarn",
      "runtimeArgs": [
        "node",
        "--preserve-symlinks",
        "--preserve-symlinks-main"
      ],
      "program": "${workspaceFolder}/dist/main.js",
      "args": ["--input-dir", "data"],
      "env": {
        "VERBOSE": "yes"
      },
      "request": "launch",
      "skipFiles": ["<node_internals>/**"],
      "type": "node"
      // "outFiles": ["${workspaceFolder}/dist/**/*.js"]
    }
  ]
}
